<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Study Group</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- ADDED: Link to custom CSS -->
    <link href="~/Content/NewStyle.css" rel="stylesheet" />
    <!-- ADDED: Bootstrap CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <!-- CHANGED: Navbar structure to include dropdown and BACK button -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Study Group</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">MAIN</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Student")">LIST</a>
                    </li>
                    <!-- ADDED: Dropdown menu for individual pages -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            People
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Content("~/HTML/Michee.html")">Michee</a>
                            <a class="dropdown-item" href="@Url.Content("~/HTML/Natasha.html")">Natasha</a>
                            <a class="dropdown-item" href="@Url.Content("~/HTML/Matthew.html")">Matthew</a>
                            <a class="dropdown-item" href="@Url.Content("~/HTML/Lysette.html")">Lysette</a>
                            <a class="dropdown-item" href="@Url.Content("~/HTML/Keegan.html")">Keegan</a>
                        </div>
                    </li>
                    <!-- ADDED: BACK button -->
                    <li class="nav-item">
                        <a class="nav-link" href="javascript:history.back()">BACK</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Study Group Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- ADDED: Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/moonerjs/coreg2.5.4/dist/umd/popper.min.js"></script>    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>